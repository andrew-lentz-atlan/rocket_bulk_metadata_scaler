{
  "id": "bulk-metadata-scaler",
  "name": "Bulk Metadata Scaler",
  "logo": "https://assets.atlan.com/assets/atlan-bot.svg",
  "config": {
    "properties": {
      "file_upload": {
        "type": "string",
        "required": true,
        "ui": {
          "label": "Reference File (CSV or Excel)",
          "placeholder": "sample_reference.csv",
          "grid": 12
        }
      },
      "asset_types": {
        "type": "string",
        "required": true,
        "ui": {
          "label": "Asset Types (comma-separated)",
          "placeholder": "Column,Table",
          "grid": 6
        }
      },
      "run_type": {
        "type": "string",
        "enum": ["dry", "live"],
        "default": "dry",
        "required": true,
        "enumNames": ["Dry Run (Preview Only)", "Live Run (Apply Changes)"],
        "ui": {
          "widget": "radio",
          "label": "Run Type",
          "help": "Dry run previews changes without applying. Live run updates assets in Atlan.",
          "grid": 6
        }
      }
    },
    "steps": [
      {
        "id": "payload",
        "properties": [
          "file_upload",
          "asset_types",
          "run_type"
        ]
      }
    ]
  }
}
